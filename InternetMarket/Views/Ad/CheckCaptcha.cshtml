@model InternetMarket.Models.ViewModels.Ad.Captcha
 
@{
    ViewBag.Title = "Captcha";
    var photoPath = "~/images/" + (Model.PathToCaptcha ?? "noimage.png");
}
 @Html.ValidationSummary(true)
<h2 class="text-center">А не бот ли ты?</h2>
<img src=@photoPath asp-append-version="true" class="card-text"/>
<form  asp-controller="Ad" asp-action="CheckCaptcha" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Text" class="col-sm-2 col-form-label">Название категории</label>
        <div class="col-sm-10">
            <input asp-for="Text" class="form-control" placeholder="Name" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
    </div>
<div class="form-group row" hidden>
        <label asp-for="PathToCaptcha" class="col-sm-2 col-form-label">Название категории</label>
        <div class="col-sm-10">
            <input asp-for="PathToCaptcha" class="form-control" placeholder="Name" />
            <span asp-validation-for="PathToCaptcha" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Проверить</button>
        </div>
    </div>
</form>