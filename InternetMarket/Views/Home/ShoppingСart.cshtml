@model ShoppingСartViewModel

@{

    ViewBag.Title = "КОРЗИНА";
}
<div>

    <div class="container">
       @foreach(var item in Model.ShoppingСarts)
            {
        <div class="row">
            <div class="col">
                @item.ProductName
            </div>
            <div class="col">
                @item.Count
            </div>
            <div class="col">
                @item.Cost
            </div>
            <div class="col">
                @item.BuyDate
            </div>
            <div class="col">
                <form method="post" asp-action="DeleteShoppingСart" asp-route-id="@item.Id">                    
                        <button type="submit" class="btn btn-danger">Удалить</button>                    
                </form>
            </div>
        </div>
            }
    <div class="row">
        <div class="col">Total</div>
        <div class="col">@Model.TotalCost</div>
        <div class="col">
            <form method="post" asp-action="MakePurchase" >
                <button type="submit" class="btn btn-danger">Оформить</button>
            </form>
        </div>
    </div>
    </div>
</div>


