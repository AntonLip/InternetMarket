
@model UpdateProductViewModel

@{

    ViewBag.Title = "Изменить продукт";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="UpdateProduct" method="post" class="mt-3">
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="Id" hidden class="form-control" placeholder="Название" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Название</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Название" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ArticleNumber" class="col-sm-2 col-form-label">Артикул</label>
        <div class="col-sm-10">
            <input asp-for="ArticleNumber" class="form-control" placeholder="Артикул" />
            <span asp-validation-for="ArticleNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Описание</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Описание" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TypeId" class="col-sm-2 col-form-label">Выберите категорию</label>
        <div class="col-sm-10">
            <select asp-for="TypeId" class="custom-select mr-sm-2"
                    asp-items="ViewBag.Types">
                <option value="">Выберите тут</option>
            </select>
            <span asp-validation-for="TypeId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Count" class="col-sm-2 col-form-label">Количество</label>
        <div class="col-sm-10">
            <input asp-for="Count" class="form-control" placeholder="Count" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Coast" class="col-sm-2 col-form-label">Стоимость</label>
        <div class="col-sm-10">
            <input asp-for="Coast" class="form-control" placeholder="Coast" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Photo" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="Photo" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Выберите картинку</label>
            </div>
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Изменить</button>
        </div>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var filename = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-input').html(filename);
                });
            });
        </script>
    }
</form>