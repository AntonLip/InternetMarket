@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CreateProductType

@{

    ViewBag.Title = "Create produst type";
}

<form enctype="multipart/form-data" asp-controller="ProductType" asp-action="CreateProductType" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Название категории</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Создать</button>
        </div>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var filename = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-input').html(filename);
                });
            });
        </script>
    }
</form>