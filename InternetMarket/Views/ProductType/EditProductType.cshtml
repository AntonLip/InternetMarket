@model EditProductTypeViewModel
@{ 
    ViewBag.Title = "ИЗМЕНИТЬ КАТЕГОРИЮ";
}

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label">Номер категории</label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Название категории</label>
        <div class="col-sm-10">
            <input asp-for="Name" type="text" class="form-control" placeholder="Username" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Изменить</button>
            <a asp-action="ProductTypeList" asp-controller="ProductType" class="btn btn-primary">Закрыть</a>
        </div>
    </div>

</form>